{
    "name": "source-api",
    "version": "0.0.1",
    "description": "API for Bespoken sources",
    "main": "./outputs/src/main/index.js",
    "scripts": {
        "build": "tsc && npm run lint",
        "clean": "rm -r ./node_modules && rm -r ./outputs",
        "lint": "tslint lib/**/*.ts && tslint test/**/*.ts && tslint bin/*.ts",
        "pretest": "tsc && npm run lint",
        "test": "nyc mocha 'outputs/src/test/**/*.js'",
        "codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
        "prestart": "npm run build",
        "start": "node ./outputs/src/main/index.js"
    },
    "keywords": [
        "bst",
        "bespoken",
        "alexa",
        "home"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bespoken/source-api"
    },
    "contributors": [
        {
            "name": "Chris Dietz",
            "name": "John Kelvie"
        }
    ],
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "chai": "^3.5.0",
        "mocha": "^3.1.2",
        "sinon": "^1.17.6",
        "sinon-chai": "^2.8.0",
        "tslint": "^4.1.1",
        "typescript": "^2.2.2",
        "typings": "^2.0.0"
    },
    "dependencies": {
        "@types/body-parser": "^1.16.0",
        "@types/chai": "^3.4.35",
        "@types/express": "^4.0.35",
        "@types/firebase": "^2.4.31",
        "@types/mocha": "^2.2.40",
        "@types/sinon": "^1.16.35",
        "@types/sinon-chai": "^2.7.27",
        "@types/uuid": "^2.0.29",
        "body-parser": "^1.17.1",
        "codecov": "^1.0.1",
        "express": "^4.15.2",
        "firebase": "^3.5.2",
        "firebase-admin": "^4.1.3",
        "firebase-tools": "^3.3.0",
        "nyc": "^10.1.2",
        "uuid": "^3.0.1"
    }
}
